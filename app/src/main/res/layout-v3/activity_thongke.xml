<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh công cụ với gradient -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/icArrowBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thống kê"
                android:textStyle="bold"
                android:textSize="28sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/icUser"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung chính -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thẻ số liệu (Carousel ngang) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="insideOverlay">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_book"
                                app:tint="#2C3E50" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số sách"
                                android:textSize="12sp"
                                android:textColor="#2C3E50" />
                            <TextView
                                android:id="@+id/tvTotalBook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150"
                                android:textSize="18sp"
                                android:textColor="#2C3E50"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_bookmark"
                                app:tint="#2C3E50" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sách mượn"
                                android:textSize="12sp"
                                android:textColor="#2C3E50" />
                            <TextView
                                android:id="@+id/tvBookBorrowed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300"
                                android:textSize="18sp"
                                android:textColor="#2C3E50"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_avatar"
                                app:tint="#2C3E50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số độc giả"
                                android:textColor="#2C3E50"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvTotalUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:textColor="#2C3E50"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Thêm LineChart tại đây -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sách mượn theo tháng"
                        android:textSize="14sp"
                        android:textColor="#2C3E50"
                        android:gravity="center" />
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bảng thống kê -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 5 sách mượn nhiều"
                        android:textSize="14sp"
                        android:textColor="#2C3E50"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <TableLayout
                        android:id="@+id/tableTopBooks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Tiêu đề bảng -->
                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tên sách"
                                android:padding="8dp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Số lần"
                                android:padding="8dp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </TableRow>

                        <!-- sach 1 -->
                        <TableRow>
                            <TextView
                                android:id="@+id/tvBookName1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sách 1"
                                android:padding="8dp"
                                android:textColor="#000000" />
                            <TextView
                                android:id="@+id/tvBookQuantity1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="50"
                                android:padding="8dp"
                                android:textColor="#000000" />
                        </TableRow>

                        <!-- sach 2 -->
                        <TableRow>
                            <TextView
                                android:id="@+id/tvBookName2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sách 2"
                                android:padding="8dp"
                                android:textColor="#000000" />
                            <TextView
                                android:id="@+id/tvBookQuantity2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="45"
                                android:padding="8dp"
                                android:textColor="#000000" />
                        </TableRow>

                        <!-- sach 3 -->
                        <TableRow>
                            <TextView
                                android:id="@+id/tvBookName3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sách 3"
                                android:padding="8dp"
                                android:textColor="#000000" />
                            <TextView
                                android:id="@+id/tvBookQuantity3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="45"
                                android:padding="8dp"
                                android:textColor="#000000" />
                        </TableRow>

                        <!-- sach 4 -->
                        <TableRow>
                            <TextView
                                android:id="@+id/tvBookName4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sách 4"
                                android:padding="8dp"
                                android:textColor="#000000" />
                            <TextView
                                android:id="@+id/tvBookQuantity4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="45"
                                android:padding="8dp"
                                android:textColor="#000000" />
                        </TableRow>

                        <!-- sach 5 -->
                        <TableRow>
                            <TextView
                                android:id="@+id/tvBookName5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sách 5"
                                android:padding="8dp"
                                android:textColor="#000000" />
                            <TextView
                                android:id="@+id/tvBookQuantity5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="45"
                                android:padding="8dp"
                                android:textColor="#000000" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>