<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/main"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".item_sach_chi_tiet">

    <ImageView
        android:id="@+id/ivSach"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_book"
        android:contentDescription="Ảnh sách"
        android:scaleType="fitCenter"
        android:layout_marginEnd="4dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="0dp">

        <TextView
            android:id="@+id/tvTenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách: Sach A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="1dp" />

        <TextView
            android:id="@+id/tvTacGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tác giả: Tac Gia A"
            android:textSize="14sp"
            android:layout_marginBottom="1dp" />

        <TextView
            android:id="@+id/tvSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 2"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>