<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:src="@drawable/book_placeholder"
        android:contentDescription="Book Image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tvTenNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân viên: Nguyen Van A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTenNguoiDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người mượn: Tran Thi B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNgayMuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bắt đầu: 01/05/2025"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvHanTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hạn trả: 01/05/2025"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>